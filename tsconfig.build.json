{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/tests"]
}
