{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/tests"]
}
