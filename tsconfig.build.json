{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"rootDir": "./.temp-build/src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"allowJs": true
	},
	"include": [
		".temp-build/src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		".temp-build/src/tests"
	]
}
