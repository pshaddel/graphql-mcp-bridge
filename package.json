{
  "name": "graphql-mcp-bridge",
  "version": "1.0.2",
  "description": "A bridge implementation connecting GraphQL APIs with the Model Context Protocol (MCP), enabling seamless integration between GraphQL services and MCP-compatible AI systems",
  "keywords": [
    "graphql",
    "mcp",
    "model-context-protocol",
    "bridge",
    "api-integration",
    "typescript",
    "nodejs",
    "ai-tools",
    "data-bridge",
    "graphql-client",
    "mcp-server"
  ],
  "license": "ISC",
  "author": "Poorshad Shaddel",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "node scripts/transform-imports.js prepare && tsc --project tsconfig.build.json && node scripts/transform-imports.js restore",
    "prepublishOnly": "npm run build",
    "test": "node --test src/tests/*.test.ts",
    "test:watch": "node --test --watch src/tests/*.test.ts",
    "test:coverage": "NODE_ENV=test c8 node --test src/tests/*.test.ts",
    "start": "node src/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'node src/index.ts",
    "format:check": "biome check",
    "format": "biome format --write --fix",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pshaddel/graphql-mcp-bridge.git"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "c8": "^10.1.3",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "biome": "^0.3.3",
    "graphql": "^16.11.0",
    "zod": "^4.1.8"
  }
}
