{
  "name": "graphql-mcp-bridge",
  "version": "1.0.0",
  "description": "Converts GraphQL Schema to MCP Functions",
  "keywords": [
    "graphql",
    "mcp",
    "mcp-bridge"
  ],
  "license": "ISC",
  "author": "Poorshad Shaddel",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "test": "node --test src/tests/*.test.ts",
    "test:watch": "node --test --watch src/tests/*.test.ts",
    "test:coverage": "NODE_ENV=test c8 node --test src/tests/*.test.ts",
    "start": "node src/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'node src/index.ts",
    "format:check": "biome check",
    "format": "biome format --write --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "c8": "^10.1.3",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  }
}
